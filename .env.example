# Google Cloud Configuration
PROJECT_ID=your-google-cloud-project-id
DATASET_ID=your-dataset-name
TABLE_ID=your-table-name

# Authentication - Service Account Key Path (optional - for production)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# BigQuery Configuration
REGION=us-central1

# MCP Server Configuration
MCP_HOST=localhost
MCP_PORT=8000
MCP_DEBUG=False

# ADK Agent Configuration
ADK_MODEL=gemini-2.5-flash
ADK_AGENT_NAME=bigquery_analytics_agent

# LLM Provider Configuration
LLM_PROVIDER=gemini  # 'gemini' or 'openai'
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo

# Streamlit UI Configuration
STREAMLIT_HOST=localhost
STREAMLIT_PORT=8501

# Google API Key for LLM-based decision making (required for LLM features)
# Generate this from Google Cloud Console and enable Generative Language API
GOOGLE_API_KEY=your-google-api-key-here